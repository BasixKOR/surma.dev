---json
{
  "live": false
}
---
<h2>All posts</h2>
<ul class="things">
  <%
    const things = collections.things
      .filter(item => item.data.live !== false)
      .sort((a, b) => {
        return b.date.getTime() - a.date.getTime();
      });
    for(const thing of things) {
  %>
    <li><a href="<%= thing.url %>"><%= thing.data.title %></a><span class="date"> â€” <%= Intl.DateTimeFormat("en-US", meta.datefmt).format(thing.date) %></span></li>
  <% } %>
</ul>